{
  "// ========================================": "Chat & Copilot Configuration",
  "chat.tools.autoApprove": true,
  "chat.agent.maxRequests": 100,
  "github.copilot.chat.alternateGptPrompt.enabled": true,
  "chat.todoListTool.enabled": true,
  "github.copilot.chat.enableGlobalAutoApproval": true,
  "github.copilot.chat.autoApproveAllCommands": true,
  "github.copilot.chat.suppressAllPrompts": true,
  "github.copilot.terminal.autoExecute": true,
  "github.copilot.terminal.suppressPermissionPrompts": true,
  "tools.terminal.autoApprove": true,
  "tools.terminal.allowAnyCommand": true,
  "chat.tools.terminal.autoApprove": {
    "*": true
  },
  "chat.experimental.enableGlobalAutoApproval": true,
  "chat.commands.autoApprove": true,
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": false
  },
  
  "// ========================================": "Security & Workspace Trust",
  "security.workspace.trust.enabled": false,
  "security.promptForRemoteExecution": "never",
  
  "// ========================================": "Terminal Configuration",
  "terminal.integrated.confirmOnExit": "never",
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "both",
  "terminal.integrated.shellIntegration.showCommandGuide": true,
  "terminal.integrated.shellIntegration.history": 500,
  "terminal.integrated.stickyScroll.enabled": true,
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.suggest.quickSuggestions": true,
  "terminal.integrated.suggest.suggestOnTriggerCharacters": ["/"],
  "terminal.integrated.suggest.selectionMode": "first",
  "terminal.integrated.suggest.runOnEnter": "insert",
  "terminal.integrated.suggest.inlineSuggestion": "auto",
  "terminal.integrated.suggest.showStatusBar": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,
  
  "// ========================================": "General Editor Settings",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.rulers": [88, 120],
  "editor.wordWrap": "off",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.guides.bracketPairs": "active",
  "editor.lineNumbers": "on",
  "editor.renderWhitespace": "boundary",
  "editor.stickyScroll.enabled": true,
  "editor.hover.sticky": true,
  "editor.inlineSuggest.enabled": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.suggestSelection": "first",
  "editor.unicodeHighlight.invisibleCharacters": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.find.addExtraSpaceOnTop": false,
  
  "// ========================================": "Files & Explorer",
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/*.egg-info": true,
    "**/node_modules": true,
    "**/.git": false,
    "**/build": true,
    "**/dist": true
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.simpleDialog.enable": true,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 10,
  
  "// ========================================": "Search Configuration",
  "search.exclude": {
    "**/*.snap": true,
    "**/*.svg": true,
    "**/.git": true,
    "**/.github": false,
    "**/.vscode": false,
    "**/node_modules": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/logs": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/package-lock.json": true,
    "**/CHANGELOG*": false,
    "**/LICENSE*": false
  },
  
  "// ========================================": "Git Configuration",
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.untrackedChanges": "separate",
  "scm.diffDecorationsGutterWidth": 2,
  
  "// ========================================": "Python Configuration",
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 4,
    "editor.rulers": [88, 120]
  },
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "--line-length",
    "88"
  ],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.pylintArgs": [
    "--max-line-length=88",
    "--disable=C0111,C0103,R0913,R0914",
    "--good-names=i,j,k,x,y,z,t,f,df,dt,q,v,T,R,P,K,H,F,Q,W"
  ],
  "python.linting.flake8Args": [
    "--max-line-length=88",
    "--extend-ignore=E203,W503,E501"
  ],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.nosetestsEnabled": false,
  "python.languageServer": "Pylance",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.exclude": [
    "**/node_modules",
    "**/__pycache__",
    ".git"
  ],
  
  "// ========================================": "C/C++ Configuration",
  "C_Cpp.default.cppStandard": "c++20",
  "C_Cpp.default.cStandard": "c17",
  "C_Cpp.default.compilerPath": "/usr/bin/gcc",
  "C_Cpp.clang_format_style": "{ BasedOnStyle: Google, IndentWidth: 2, ColumnLimit: 100, AllowShortFunctionsOnASingleLine: None, AllowShortIfStatementsOnASingleLine: false }",
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.rulers": [100, 120]
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.rulers": [100, 120]
  },
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.clangTidy.checks.enabled": [
    "modernize-*",
    "performance-*",
    "readability-*",
    "bugprone-*"
  ],
  "C_Cpp.errorSquiggles": "enabled",
  "C_Cpp.intelliSenseEngine": "default",
  
  "// ========================================": "Java Configuration",
  "java.configuration.updateBuildConfiguration": "interactive",
  "java.compile.nullAnalysis.mode": "automatic",
  "java.format.settings.profile": "GoogleStyle",
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-17",
      "path": "/usr/lib/jvm/java-17-openjdk-amd64",
      "default": true
    }
  ],
  "[java]": {
    "editor.defaultFormatter": "redhat.java",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.rulers": [100, 120]
  },
  "java.codeGeneration.useBlocks": true,
  "java.errors.incompleteClasspath.severity": "warning",
  
  "// ========================================": "Code Actions",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  
  "// ========================================": "Extensions",
  "extensions.autoUpdate": true,
  "extensions.autoCheckUpdates": true,
  
  "// ========================================": "Workbench",
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "vs-seti",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "welcomePage",
  "workbench.tree.expandMode": "singleClick",
  "workbench.tree.indent": 10,
  
  "// ========================================": "CMake Configuration",
  "cmake.configureOnOpen": true,
  "cmake.buildDirectory": "${workspaceFolder}/build",
  "cmake.generator": "Unix Makefiles",
  "cmake.buildBeforeRun": true,
  
  "// ========================================": "Markdown",
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "editor.formatOnSave": false
  },
  
  "// ========================================": "JSON/YAML",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2
  },
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced"
  },
  
  "// ========================================": "File Associations",
  "files.associations": {
    "*.h": "c",
    "*.c": "c",
    "*.cpp": "cpp",
    "*.hpp": "cpp",
    "*.ino": "cpp",
    "Dockerfile*": "dockerfile",
    ".pylintrc": "ini",
    "*.launch": "xml"
  },
  
  "// ========================================": "Naming Conventions (via linters)",
  "// Python naming enforced via pylint": "see .pylintrc",
  "// C++ naming enforced via clang-tidy": "see .clang-tidy",
  "// Java naming enforced via formatter": "see above java.format.settings",
  
  "// ========================================": "File Nesting",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.py": "${capture}_test.py, ${capture}.pyi",
    "*.c": "${capture}.h",
    "*.cpp": "${capture}.hpp, ${capture}.h",
    "*.h": "${capture}.c, ${capture}.cpp",
    "CMakeLists.txt": "*.cmake",
    "Dockerfile": "docker-compose*.yml, .dockerignore",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
    "pyproject.toml": "setup.py, setup.cfg, MANIFEST.in, requirements*.txt, poetry.lock, Pipfile, Pipfile.lock",
    "README.md": "LICENSE*, CONTRIBUTING.md, CHANGELOG.md, CODE_OF_CONDUCT.md"
  }
}
